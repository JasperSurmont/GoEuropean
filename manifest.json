{
  "manifest_version": 3,
  "name": "Go European",
  "version": "1.0",
  "description": "Suggests European website alternatives to non-European websites.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["countryMappings.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "goeuropean@example.com",
      "strict_min_version": "79.0",
      "background": {
        "page": "html/background.html"
      }
    }
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}